<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.CardView
        android:layout_width="379dp"
        android:id="@+id/cv"
        app:cardElevation="4dp"
        android:layout_height="120dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="79dp"
                android:background="@color/colorPrimaryLight"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/constraintLayout"
                app:layout_constraintHorizontal_bias="1.0">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/max_min_txt_max"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.11"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/max_min_txt_min"
                    android:textSize="12sp"
                    android:layout_marginStart="32dp"
                    app:layout_constraintLeft_toRightOf="@+id/max_min_txt_max"
                    android:layout_marginLeft="32dp"
                    app:layout_constraintTop_toTopOf="@+id/max_min_txt_max"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.37" />

                <TextView
                    android:text="TextView TextView TextView TextView TextView"
                    android:layout_width="129dp"
                    android:layout_height="37dp"
                    android:id="@+id/max_min_txt_maxbank"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/max_min_txt_max"
                    app:layout_constraintLeft_toLeftOf="@+id/max_min_txt_max"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toLeftOf="@+id/mybanks_txt_eur_sell"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mybanks_txt_eur_sell"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/max_min_txt_max"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/max_min_txt_min"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Large Text"
                android:id="@+id/mybanks_txt_bank_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.52"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="32dp"
                app:layout_constraintHorizontal_bias="0.01" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_usd"
                android:id="@+id/FloatingActionButton_min_max_c"
                app:elevation="0dp"
                app:backgroundTint="?attr/colorPrimary"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
