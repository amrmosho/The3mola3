<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="escapes.ismail_pc.the3mola.all_page">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_aed"
        android:id="@+id/floatingActionButton_AED"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="center_vertical|right"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="190dp"
        app:backgroundTint="?attr/colorPrimary" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_kwd"
        android:id="@+id/floatingActionButton_KWD"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="center_vertical|right"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="180dp"
        app:backgroundTint="?attr/colorPrimary" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_eur"
        android:id="@+id/floatingActionButton_EUR"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="center_vertical|right"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="80dp"
        app:backgroundTint="?attr/colorPrimary" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"

        app:fabSize="mini"
        app:srcCompat="@drawable/ic_usd"
        android:id="@+id/floatingActionButton_USD"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="center_vertical|right"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="140dp"
        app:backgroundTint="?attr/colorPrimary" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_sar"
        android:id="@+id/floatingActionButton_SAR"
        app:layout_anchor="@+id/container"

        app:layout_anchorGravity="center"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="130dp"
        app:backgroundTint="?attr/colorPrimary" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cv"

            android:layout_marginEnd="0dp"

            android:layout_marginStart="0dp"


            android:layout_marginTop="0dp"

            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"

            android:layout_marginBottom="0dp"
            android:layout_height="50dp">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_usd"
                    android:id="@+id/floatingActionButton_title"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/all_c_title"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:elevation="0dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:backgroundTint="?attr/colorPrimary" />

                <TextView
                    android:text="usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_c_title"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintHorizontal_bias="0.0" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        <ListView
            android:id="@+id/list_all_home"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:srcCompat="@drawable/ic_repeat_white_24dp"
        app:fabSize="normal"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="16dp" />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progress_view_all"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        android:layout_gravity="center_vertical|center_horizontal" />
</FrameLayout>
