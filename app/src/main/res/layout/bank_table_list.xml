<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/bank_table_image"
        android:background="#f6f6f6"
        android:layout_height="70dp"
        android:layout_width="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearance"
        android:text="Large Text"
        android:id="@+id/bank_table_title"

        app:layout_constraintLeft_toRightOf="@+id/bank_table_image"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/bank_table_image"
        app:layout_constraintBottom_toBottomOf="@+id/bank_table_image"
        android:layout_width="110dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/max_min_txt_max"
        app:layout_constraintTop_toTopOf="@+id/bank_table_title"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/bank_table_title"
        android:layout_marginLeft="24dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/max_min_txt_min"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/max_min_txt_max"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/max_min_txt_max"
        android:textSize="12sp" />

    <ImageButton
        app:srcCompat="@drawable/ic_favorite_border_black_24dp"
        android:id="@+id/addTofav"
        android:background="@null"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/max_min_txt_min"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:scaleType="fitEnd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toRightOf="@+id/max_min_txt_min" />
</android.support.constraint.ConstraintLayout>
