<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/bank_table_image"
        android:background="#f6f6f6"
        android:layout_height="70dp"
        android:layout_width="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearance"
        android:text="Large Text"
        android:id="@+id/bank_table_title"

        app:layout_constraintLeft_toRightOf="@+id/bank_table_image"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/bank_table_image"
        app:layout_constraintBottom_toBottomOf="@+id/bank_table_image"
        android:layout_width="110dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bank_table_txt_sell"
        app:layout_constraintTop_toTopOf="@+id/bank_table_title"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/bank_table_title"
        android:layout_marginLeft="24dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bank_table_txt_buy"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/bank_table_txt_sell"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="@+id/bank_table_txt_sell"
        android:textSize="12sp" />
</android.support.constraint.ConstraintLayout>
